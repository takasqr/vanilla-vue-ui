{
  "name": "vanilla-vue-ui",
  "version": "0.0.12",
  "private": false,
  "type": "module",
  "files": [
    "basic",
    "template",
    "custom",
    "icon",
    "types",
    "util",
    "page-template"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run copy",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "copy-template": "copyfiles -u 1 src/template/**/* .",
    "copy-basic": "copyfiles -u 1 src/basic/**/* .",
    "copy-custom": "copyfiles -u 1 src/custom/**/* .",
    "copy-icon": "copyfiles -u 1 src/icon/**/* .",
    "copy-types": "copyfiles -u 1 src/types/**/* .",
    "copy-util": "copyfiles -u 1 src/util/**/* .",
    "copy-page-template": "copyfiles -u 1 src/page-template/**/* .",
    "copy": "npm run copy-template && npm run copy-basic && npm run copy-custom && npm run copy-icon && npm run copy-types && npm run copy-util && npm run copy-page-template"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.17",
    "@heroicons/vue": "^2.1.1",
    "dayjs": "^1.11.11",
    "japanjs": "^0.1.6",
    "konva": "^9.3.15",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-konva": "^3.1.0",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-themes": "^7.6.20",
    "@storybook/blocks": "^7.6.10",
    "@storybook/test": "^7.6.10",
    "@storybook/vue3": "^7.6.10",
    "@storybook/vue3-vite": "^7.6.10",
    "@tsconfig/node18": "^18.2.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.17",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-vue": "^9.27.0",
    "jsdom": "^23.0.1",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.33",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.10",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.8.25"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
